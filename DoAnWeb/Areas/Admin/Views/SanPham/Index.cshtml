@model  List<DoAnWeb.Models.SanPham>
@{
    ViewBag.Title = "sản phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}
<style>
    * {
        box-sizing: border-box;
    }
    .content {
        max-width: 100%;
    }
    .table-container {
        overflow-x: scroll;
    }
    table th,
    table td {
        min-width: 180px;
    }
    .pagination-container{
        margin: 50px auto 0;
    }
</style>
