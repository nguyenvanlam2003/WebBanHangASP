@model DoAnWeb.Models.User
@{
    Layout = null;
}

<title>Thêm Sản Phẩm</title>
<!-- Chèn các tệp CSS và JS của Bootstrap -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

<div class="container mt-5">
    <h2>Sửa thông tin</h2>
    @using (Html.BeginForm("Edit", "Account", new { MaTK = Model.maTK }, FormMethod.Post, new { enctype = "multipart/form-data", id = "myForm" }))
    {
        <div class="row">
            <!-- Cột 1 -->
            <div class="col-md-6">
                <!-- Tên sản phẩm -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.tenUser, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.tenUser, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(model => model.SDT, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.SDT, new { @class = "form-control" })
                </div>
                <!-- Màn hình -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.email, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.email, new { @class = "form-control" })
                </div>

                <!-- Độ phân giải -->
                <div class="mb-3">
                    @Html.LabelFor(model => model.taiKhoan, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.taiKhoan, new { @class = "form-control" })
                </div>
                <div class="mb-3">
                    @Html.LabelFor(model => model.matKhau, new { @class = "form-label" })
                    @Html.TextBoxFor(model => model.matKhau, new { @class = "form-control" })
                </div>
            </div>
        </div>

        <!-- Nút Submit và Nút Quay Lại -->
        <button type="submit" class="btn btn-success">Sửa thông tin</button>
        <a href="@Url.Action("Index", "Home")" class="btn btn-secondary">Quay Lại</a>
    }
</div>






